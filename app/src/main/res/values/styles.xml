<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GoNativeTheme.NoActionBar" parent="GoNativeTheme.WithActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="GoNativeTheme.WithActionBar" parent="GN.Light">
        <item name="android:actionBarStyle">@style/GN.ActionBar</item>
        <item name="android:homeAsUpIndicator">?attr/ic_action_back</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">?attr/ic_action_overflow</item>
    </style>

    <attr name="ic_drawer" format="reference"/>
    <attr name="ic_action_refresh" format="reference"/>
    <attr name="ic_action_search" format="reference"/>
    <attr name="ic_action_overflow" format="reference"/>
    <attr name="ic_action_back" format="reference"/>

    <style name="GN.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/GN.ActionBarTitleText</item>
        <!--gonative placeholder: actionbarBackgroundColor-->
        <!--<item name="android:background">#dddddd</item>-->
    </style>

    <style name="GN.ActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!--gonative placeholder: actionbarTitleColor-->
        <!--<item name="android:textColor">#000000</item>-->
    </style>

    <style name="GN.Light" parent="android:Theme.Holo.Light">
        <item name="ic_drawer">@drawable/ic_drawer_light</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh_light</item>
        <item name="ic_action_search">@drawable/ic_action_search_light</item>
        <item name="ic_action_overflow">@drawable/ic_action_overflow_light</item>
        <item name="ic_action_back">@drawable/ic_action_back_light</item>
    </style>

    <style name="GN.LightWithDarkActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="ic_drawer">@drawable/ic_drawer_dark</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh_dark</item>
        <item name="ic_action_search">@drawable/ic_action_search_dark</item>
        <item name="ic_action_overflow">@drawable/ic_action_overflow_dark</item>
        <item name="ic_action_back">@drawable/ic_action_back_dark</item>
    </style>

    <style name="GN.Dark" parent="android:Theme.Holo">
        <item name="ic_drawer">@drawable/ic_drawer_dark</item>
        <item name="ic_action_refresh">@drawable/ic_action_refresh_dark</item>
        <item name="ic_action_search">@drawable/ic_action_search_dark</item>
        <item name="ic_action_overflow">@drawable/ic_action_overflow_dark</item>
        <item name="ic_action_back">@drawable/ic_action_back_dark</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>





</resources>
